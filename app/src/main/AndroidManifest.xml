<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sumit.databaseconnection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name="com.example.sumit.databaseconnection.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sumit.databaseconnection.SetPreferencesActivity"
            android:label="@string/title_activity_set_preferences"
            android:parentActivityName="com.example.sumit.databaseconnection.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sumit.databaseconnection.MainActivity" />
        </activity>
        <activity
            android:name="com.example.sumit.databaseconnection.SQLiteActivity"
            android:label="@string/title_activity_sqlite"
            android:parentActivityName="com.example.sumit.databaseconnection.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sumit.databaseconnection.MainActivity" />
        </activity>

    </application>

</manifest>
